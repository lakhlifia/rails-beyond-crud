<p style="color: green"><%= notice %></p>

<%= render @restaurant %>


<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %>
    <%= link_to "delete this review", review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </p>
<% end %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= link_to "add a review", new_restaurant_review_path(@restaurant) %>
  <%= button_to "Delete this restaurant", @restaurant, method: :delete %>
</div>


<%= link_to 'chef page', chef_restaurant_path(@restaurant) %>
